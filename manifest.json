{
    // Required
    "manifest_version": 2,
    "name": "OLIT",
    "version": "2013.9",

    "description": "Open Links in Tabs - URLs listed in a form are opened in tabs.",
    "icons": { 
        "16":  "folder-blue-16.png",
        "48":  "folder-blue-48.png",
        "128": "folder-blue-128.png" 
    },
    
    "browser_action": {
        "default_title": "OLIT",
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "storage"
     ],

    // Optional
    "author": "Managed Kaos"

